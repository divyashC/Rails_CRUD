<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Instagram</th>
            <th> </th>
        </tr>
    </thead>

    <tbody>
        <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
            <td><%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"btn btn-link" %></td>
            <td><%= link_to friend.email, 'mailto:'+friend.email, target: :_blank, class:"btn btn-link" %></td>
            <td><%= link_to friend.phone, 'tel:'+friend.phone, target: :_blank, class:"btn btn-link" %></td>
            <td><%= link_to friend.instagram, 'https://www.instagram.com/'+friend.instagram[1..-1], target: :_blank, class:"btn btn-link" %></td>
            <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
        <% end %>
    </tbody>
</table>

<br>
<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>

<div class="card">
    <h1 class="card-header">Friends App</h1>
    <div class="card-body">
        <h3 class="card-title">Home</h3>
        <br>
        <p class="card-text">This is a simple CRUD app I made while learning Ruby on Rails</p>
        <p class="card-text">Please Sign In or Sign Up to Continue</p>
        <br>
        <p class="card-text">Visit my Instagram - <%= link_to '@dork_v3.0', 'https://www.instagram.com/dork_v3.0', target: :_blank %> </p>
        <p class="card-text">Visit my Twitter - <%= link_to '@dork_v2', 'https://twitter.com/dork_v2', target: :_blank %> </p>
        <p class="card-text">Visit my GitHub - <%= link_to 'divyashC', 'https://github.com/divyashC/', target: :_blank %> </p>
        <hr class="dropdown-divider">
        <br>
        <%= link_to 'Sign Up', new_user_registration_path,  class:"btn btn-dark" %>
        <%= link_to 'Sign in', new_user_session_path,  class:"btn btn-dark" %>
    </div>
</div>

<% end %>